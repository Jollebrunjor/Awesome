@using Awesome.Models.ViewModel
@model Awesome.Models.ViewModel.HomeViewModel
@{
    ViewBag.Title = "EM Tipset 2016";
    Layout = "~/Views/Shared/_Layout.cshtml";

}



<header class="intro">
    <div class="intro-body">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h1 class="brand-heading">EM Tipset 2016</h1>
                    <p class="intro-text">
                        @ViewData["Logout"]
                        @if (@ViewData["Logout"] == null)
                        {
                            @String.Format("Ingen kommer ihåg en fegis!")
                        } 
                    </p>
                    @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                    {
                        <a href="#standings" class="btn btn-circle page-scroll">
                            <i class="fa fa-angle-double-down animated"></i>
                        </a>
                    }
                    else
                    {
                        <a class="page-scroll btn btn-default" href="#login" id="loginButton">Logga in</a>
                        <a class="page-scroll btn btn-default" href="#signup" id="signupButton">Registrera</a>
                    }
                           
</div>
            </div>
        </div>
    </div>
</header>




<section id="standings" class="container content-section standings">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            @Html.Partial("StandingsPartial", Model)
            </div>
        </div>
</section>

<section id="schedule" class="container content-section">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            @Html.Partial("SchedulePartial", Model)
        </div>
    </div>
</section>

<section id="rules" class="container content-section text-center">

    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            @Html.Partial("RulesPartial")
        </div>
    </div>
</section>


<section id="login" class="container content-section text-center" hidden>

    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            @if (!User.Identity.IsAuthenticated)
            {
                @Html.Partial("~/Views/Account/LogIn.cshtml", new UserLoginView(Model.LoginErrorMessage))
            }


        </div>
    </div>  
</section>

<section id="signup" class="container content-section text-center" hidden>
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            @if (!User.Identity.IsAuthenticated)
            {
                @Html.Partial("~/Views/Account/SignUp.cshtml", new UserSignUpView(Model.SignupErrorMessage))
            }
          

        </div>
    </div>
</section>


<script>
 

    $(document).ready(function () {



    });

    $("#loginButton").click(function () {
        $('#signup').hide();
        $('#login').show();
    });

    $("#signupButton").click(function () {
        $('#login').hide();
        $('#signup').show();
    });

</script>





